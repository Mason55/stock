# .env.example - 环境变量配置模板
# 复制此文件为 .env 并根据需要修改配置

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/stockdb
# 离线模式下可使用 SQLite: DATABASE_URL=sqlite:///stock.db

# Redis 配置
REDIS_URL=redis://localhost:6379
USE_REDIS=true

# API 配置
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=false

# CORS 配置 (逗号分隔多个域名)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 运行模式配置
OFFLINE_MODE=false
MOCK_DATA_ENABLED=false
DEPLOYMENT_MODE=development

# 日志配置
LOG_TO_FILE=true
LOG_LEVEL=INFO

# 外部服务配置
EXTERNAL_API_TIMEOUT=5.0
EXTERNAL_API_RETRIES=3

# 性能配置
API_TIMEOUT=1.5
BATCH_SIZE=1000
CACHE_TTL=300
MODEL_UPDATE_INTERVAL=3600

# 可选：外部数据源API密钥
STOCK_DATA_API_KEY=your_api_key_here
STOCK_DATA_BASE_URL=https://api.example.com

# Kafka配置 (可选)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092